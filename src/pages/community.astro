---
import Layout from "@/layouts/Layout.astro";
import CommunityPageHero from "@/components/CommunityPageHero";
import SocialMediaSection from "@/components/SocialMediaSection";
import StarDome from "@/components/StarDome";
import GovernanceHistory from "@/components/GovernanceHistory";
import EcosystemPartners from "@/components/EcosystemPartners";
import Branding from "@/components/Branding";
import Dividers from "@/components/Dividers";

import I18n, { type LocaleCode } from "@/i18n";
const locale = I18n.pick_current_locale(Astro.currentLocale as LocaleCode);
const t = I18n.create_trans(locale);
---

<Layout>
	<CommunityPageHero locale={locale} />
	<Dividers />
	<SocialMediaSection locale={locale} />
	<Dividers />
	<StarDome locale={locale} />
	<Dividers />
	<GovernanceHistory locale={locale} />
	<Dividers />
	<EcosystemPartners locale={locale} />
	<Dividers />
	<Branding locale={locale} />

	<Fragment slot="page-meta">
		<title>{t("community.title")} - {t("site.name")}</title>
		<meta name="robots" content="index, follow" />
		<meta name="description" content={t("community.meta_description")} />
		<meta name="keywords" content={t("community.keywords")} />
		<meta name="twitter:card" content={t("community.twitter_card")} />
		<meta name="twitter:title" content={t("community.twitter_title")} />
		<meta name="twitter:description" content={t("community.twitter_description")} /> 
		<meta name="twitter:image" content={t("community.twitter_image")} />
		<!-- <link rel="canonical" href={site} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={desc} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={site} />
		<meta property="og:image" content={`${site}favicon.png`} /> -->
	</Fragment>
</Layout>
