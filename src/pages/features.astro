---
import Layout from "@/layouts/Layout.astro";
import FeaturesPageHero from "@/components/FeaturesPageHero";
import FeatureSection from "@/components/FeatureSection";
import NewTrails from "@/components/NewTrails/index.astro";
import StarcoinTwoFeatures from "@/components/StarcoinTwoFeatures";
import StarcoinFoundation from "@/components/StarcoinFoundation";
import StarcoinGrant from "@/components/StarcoinGrant";
import StarcoinRoadmap from "@/components/StarcoinRoadmap";
import Dividers from "@/components/Dividers";

import I18n, { type LocaleCode } from "@/i18n";
const locale = I18n.pick_current_locale(Astro.currentLocale as LocaleCode);
const t = I18n.create_trans(locale);
---

<Layout>
	<FeaturesPageHero locale={locale} />
	<Dividers />
	<FeatureSection locale={locale} />
	<Dividers />
	<NewTrails locale={locale} />
	<Dividers />
	<StarcoinTwoFeatures locale={locale} />
	<Dividers />
	<StarcoinFoundation locale={locale} />
	<Dividers />
	<StarcoinGrant locale={locale} />
	<Dividers />
	<StarcoinRoadmap locale={locale} />

	<Fragment slot="page-meta">
		<title>{t("features.title")} - {t("site.name")}</title>
		<meta name="robots" content="index, follow" />
		<meta name="description" content={t("features.meta_description")} />
		<meta name="keywords" content={t("features.keywords")} />
