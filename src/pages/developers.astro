import MoveInnovationWithStarcoin from "@/components/MoveInnovationWithStarcoin";
import JoinTheCommunity from "@/components/JoinTheCommunity";
import Dividers from "@/components/Dividers";

import I18n, { type LocaleCode } from "@/i18n";
const locale = I18n.pick_current_locale(Astro.currentLocale as LocaleCode);
const t = I18n.create_trans(locale);
---

<Layout>
	<DevelopersPageHero locale={locale} />
	<Dividers />
	<WhatIsMove locale={locale} />
	<Dividers />
	<WhyMove locale={locale}/>
	<Dividers />
	<MoveStarcoin locale={locale}/>
	<Dividers />
	<StarcoinMoveFeatures locale={locale}/>
	<Dividers />
	<DownloadTheSdk locale={locale}/>
	<Dividers />
	<MoveInnovationWithStarcoin locale={locale}/>
	<Dividers />
	<JoinTheCommunity locale={locale}/>
	<Fragment slot="page-meta">
		<title>{t("developers.title")} - {t("site.name")}</title>
		<meta name="description" content={t("developers.meta_description")} />
