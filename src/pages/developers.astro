---
import Layout from "@/layouts/Layout.astro";
import DevelopersPageHero from "@/components/DevelopersPageHero";
import WhatIsMove from "@/components/WhatIsMove";
import WhyMove from "@/components/WhyMove";
import MoveStarcoin from "@/components/MoveStarcoin";
import StarcoinMoveFeatures from "@/components/StarcoinMoveFeatures";
